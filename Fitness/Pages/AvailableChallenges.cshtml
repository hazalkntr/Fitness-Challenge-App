@page
@model Fitness.Pages.AvailableChallengesModel
@{
    ViewData["Title"] = "Available Challenges";
}
@using System.Security.Claims


<style>
    body {
        background-image: url('/images/dumb.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .fitness-form-container {
        background: rgba(255, 255, 255, 0.8); 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn {
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #51a5ff;
    }
    .btn-danger:hover {
        background-color: #ff5868;
    }
    .btn:disabled {
        cursor: not-allowed;
        opacity: 0.6;
    }
    .give-up-btn {
        background-color: #ffcc80; 
        border-color: #ffcc80; 
        color: #333; 
        padding: 6px 12px; 
        font-size: 14px;
        border-radius: 4px; 
        transition: background-color 0.3s ease; 
    }
    .give-up-btn:hover {
        background-color: #ffa726; 
        border-color: #ffa726; 
        color: #333; 
    }
    .save-btn {
        background-color: #fa92ec; 
        border-color: #ff6af8; 
        color: #333; 
        padding: 6px 12px; 
        font-size: 14px;
        border-radius: 4px; 
        transition: background-color 0.3s ease; 
    }
    .save-btn:hover {
        background-color: #fdbbff; 
        border-color: #ff6acd; 
        color: #333; 
    }
    .leaderboard-btn {
        background-color: #94c2ff; 
        border-color: #4d99fc; 
        color: #333; 
        padding: 6px 12px; 
        font-size: 14px;
        border-radius: 4px; 
        transition: background-color 0.3s ease; 
    }
    .leaderboard-btn:hover {
        background-color: #b4d5ff; 
        border-color: #80b6fd; 
        color: #333; 
    }
    .filter-btn {
        background-color: #57fcee; 
        border-color: #30b4a9; 
        color: #333; 
        padding: 6px 12px; 
        font-size: 14px;
        border-radius: 4px; 
        transition: background-color 0.3s ease; 
    }
    .filter-btn:hover {
        background-color: #74c5fc; 
        border-color: #4791c2; 
        color: #333; 
    }
    
</style>

<h1>Available Challenges</h1>

<div class="fitness-form-container">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Category</th>
                <th>Difficulty Level</th>
                <th>Instructions</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var challengeWithJoinStatus in Model.AvailableChallenges)
            {
                var challenge = challengeWithJoinStatus.Challenge;
                var isJoined = challengeWithJoinStatus.IsJoined;
                <tr>
                    <td>@challenge.Title</td>
                    <td>@challenge.Description</td>
                    <td>@challenge.StartDate.ToShortDateString()</td>
                    <td>@challenge.EndDate?.ToShortDateString()</td>
                    <td>@challenge.Category</td>
                    <td>@challenge.DifficultyLevel</td>
                    <td>@challenge.Instructions</td>
                    
                    
                    <td>
                        @if (isJoined)
                        {
                            <div>
                                @if (challengeWithJoinStatus.IsJoined)
                                {
                                    <button class="btn btn-success" disabled>Joined!</button>
                                    <form method="post" asp-page-handler="GiveUp" asp-route-challengeId="@challenge.ChallengeId">
                                        <button type="submit" class="give-up-btn">Give Up :(</button>
                                    </form>
                                }
                            </div>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Join" asp-route-challengeId="@challenge.ChallengeId">
                                <button type="submit" class="btn btn-primary">Join Challenge</button>
                            </form>
                        }
                        
                        
                        @if (User.Identity.IsAuthenticated && challenge.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                        {
                            <form method="post" asp-page-handler="Delete" asp-route-challengeId="@challenge.ChallengeId">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        }
                    </td>
                    <td>
                        <form method="post" asp-page-handler="SaveToFavorites" asp-route-challengeId="@challenge.ChallengeId">
                            <button type="submit" class="save-btn">Save to Favorites</button>
                        </form>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="fitness-form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="get">
                <div class="form-group">
                    <input type="text" class="form-control" name="searchKeyword" placeholder="Search by keyword">
                </div>
                <div class="form-group">
                    <select class="form-control" name="difficultyLevel">
                        <option value="">All Difficulty Levels</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                </div>
                <div class="form-group">
                    <select class="form-control" name="category">
                        <option value="">All Categories</option>
                        <option value="Step">Step</option>
                        <option value="Squad">Squad</option>
                        <option value="Cardio">Cardio</option>
                        <option value="Weight Loss">Weight Loss</option>
                        <option value="Body Building">Body Building</option>
                        <option value="Yoga">Yoga</option>
                        <option value="Muscle Gain">Muscle Gain</option>
                        <option value="Running">Running</option>
                        <option value="General">General</option>
                    </select>
                </div>
                <div class="form-group"><br>
                    <button type="submit" class="filter-btn">Apply Filters</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form method="get">
                <div class="form-group">
                    <select class="form-control" name="sortBy">
                        <option value="">Sort by</option>
                        <option value="Difficulty">Difficulty</option>
                        <option value="Category">Category</option>
                    </select>
                </div>
                <div class="form-group"><br>
                    <button type="submit" class="filter-btn">Apply Sorting</button>
                </div>
            </form>
        </div>

    </div>
    <br>
    <table class="table">
        <tbody>
            @foreach (var challengeWithJoinStatus in Model.AvailableChallenges)
            {
                <!-- filtered challenges -->
            }
        </tbody>
    </table>
</div>
