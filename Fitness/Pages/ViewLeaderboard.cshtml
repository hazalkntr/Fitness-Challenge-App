@page
@model Fitness.Pages.ViewLeaderboardModel
@{
    ViewData["Title"] = "View Leaderboard";
}

<h1>Leaderboard for Challenge: @Model.Challenge.Title</h1>

@if (Model.Leaderboard != null && Model.Leaderboard.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Rank</th>
                <th>User</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Leaderboard)
            {
                <tr>
                    <td>@item.Rank</td>
                    <td>@item.Email</td>
                    <td>@item.Score</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No leaderboard data available.</p>
}
