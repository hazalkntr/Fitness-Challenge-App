@page
@model MyApp.Namespace.FitnessServiceModel
@{
    ViewData["Title"] = "Fitness Service";
}

<style>
    body {
        background-image: url('/images/fitness.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .fitness-form-container {
        background: rgba(255, 255, 255, 0.8); 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }
    .btn {
        margin-right: 10px; 
    }
    .btn:hover {
        transform: translateY(-3px); 
    }
    .btn-group {
        display: flex;
        justify-content: center;
        margin-bottom: 20px; 
    }
    .bulleted-list {
        text-align: left;
        margin-top: 10px; 
    }
    .section-container {
        display: flex;
        justify-content: space-around;
    }
    .section {
        width: 45%; /* Adjust as needed */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="fitness-form-container">
                <h1 class="mb-4">Fitness Challenge Service</h1>
                
                <h4>Welcome to Fitness Challenge Service!</h4><br>
                <h5 class="mb-4">You are now logged in and can interact with the Fitness Website.</h5><br>

                <h6>Look to the center of your screen! You should see the necessary buttons for a smooth experience. Enjoy and be healthy!</h6><br>
                
                <div class="section-container">
                    <div class="section">
                        <a class="btn btn-light text-dark" style="background-color: #98d8ff;" asp-area="" asp-page="/AvailableChallenges">Available Challenges</a>
                        <div class="bulleted-list">
                            <ul>
                                <p><strong>click here to:</strong></p>
                                <li>view available challenges, browsing, and joining</li>
                                <li>search for challenges based on your requirement</li>
                                <li>filter to sort challenges based on your requirement</li>
                                <li>save your favorite challenges to your profile which you can view on your profile page later</li>
                            </ul>
                        </div>
                    </div>
                    <div class="section">
                        <a class="btn btn-light text-dark" style="background-color: #88f888;" asp-area="" asp-page="/CreateChallenge">Create Challenge</a>
                        <div class="bulleted-list">
                            <ul>
                                <br>
                                <p><strong>click here to:</strong></p>
                                <li>add new challenges with details as per your wish</li>
                            </ul>
                        </div>
                    </div>
                    <div class="section">
                        <a href="/YourChallenges" class="btn btn-light text-dark" style="background-color: #dfa0fc;">Your Challenges</a>
                        <div class="bulleted-list">
                            <ul>
                                <br>
                                <p><strong>click here to:</strong></p>
                                <li>view challenges that you participate in</li>
                                <li>view leaderboards of challenges</li>
                                <li>update your daily progress in your challenges</li>
                            </ul>
                        </div>
                    </div>
                    <div class="section">
                        <a href="/Rate" class="btn btn-light text-dark" style="background-color: #ffc964;">Rate Challenges</a>
                        <div class="bulleted-list">
                            <ul>
                                <br>
                                <p><strong>click here to:</strong></p>
                                <li>rate challenges</li> 
                                <li>provide feedback in the comments</li>
                            </ul>
                        </div>
                    </div>
                    <div class="section">
                        <a href="/ChallengeStatistics" class="btn btn-light text-dark" style="background-color: #a6a8fc;">Challenge Statistics</a>
                        <div class="bulleted-list">
                            <ul>
                                <p><strong>click here to:</strong></p>
                                <li>view statistics about challenges</li> 
                                <li>average ratings and comments</li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
