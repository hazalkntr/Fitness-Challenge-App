@page
@model Fitness.Pages.CreateChallengeModel
@{
    ViewData["Title"] = "Create New Challenge";
}

<style>
    body {
        background-image: url('/images/run.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .fitness-form-container {
        background: rgba(255, 255, 255, 0.8); 
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>

<h1>Create New Challenge</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Challenge.Title" class="control-label"></label>
        <input asp-for="Challenge.Title" class="form-control" />
        <span asp-validation-for="Challenge.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Description" class="control-label"></label>
        <input asp-for="Challenge.Description" class="form-control" />
        <span asp-validation-for="Challenge.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.StartDate" class="control-label"></label>
        <input asp-for="Challenge.StartDate" class="form-control" />
        <span asp-validation-for="Challenge.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.EndDate" class="control-label"></label>
        <input asp-for="Challenge.EndDate" class="form-control" />
        <span asp-validation-for="Challenge.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="IsDeleted" /> <label asp-for="IsDeleted" class="control-label">Is Deleted</label>
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="/AvailableChallenges">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
